<div class="container">
  <h1 class="h1"> Votre profil</h1>

  <div class="d-flex">
    <% if current_user.photo.attached? %>
        <%= cl_image_tag(current_user.photo.key, class: "user-photo img-card") %>
      <% else %>
        <i class="fa-regular fa-user user-photo"></i>
    <% end %>
    <div class="d-block">
      <h3 class="h3 mb-2">Me d√©connecter :</h3>
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
        <i class="fa-solid fa-power-off button-navbar "></i>
        <% end %>
      <% end %>
    </div>
  </div>

  <h3 class="h3 mt-1">Modifier mon compte</h3>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs p">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>En attente de confirmation pour: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :first_name,
                  hint: "laisser vide si tu ne souhaites pas modifier ton pr√©nom",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first_name" },
                  input_html: { class: 'input-field' }%>
      <%= f.input :last_name,
                  hint: "laisser vide si tu ne souhaites pas modifier ton nom de famille",
                  required: true,
                  input_html: { autocomplete: "last_name" },
                  input_html: { class: 'input-field' }%>
      <%= f.input :password,
                  hint: "laisser vide si tu ne souhaites pas modifier ton mot de passe",
                  required: false,
                  input_html: { autocomplete: "nouveau mot de passe" },
                  input_html: { class: 'input-field' } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "nouveau mot de passe" },
                  input_html: { class: 'input-field' } %>
      <%= f.input :current_password,
                  hint: "nous avons besoin de ton mot de passe actuel pour confirmer la modification",
                  required: true,
                  input_html: { autocomplete: "current-password" },
                  input_html: { class: 'input-field' } %>
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre √† jour", class: "w-100 btn btn-flat mt-3" %>
    </div>
  <% end %>

  <h3 class="h3 mt-3">Supprimer mon compte</h3>
  <div class="d-block align-items-center">
    <div>Tu veux r√©ellement nous quitter ü•∫ ?</div>
    <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Confirmes-tu la suppression d√©finitive de ton compte ?" }, method: :delete, class: "w-100 btn btn-flat p" %>
  </div>

  <%= link_to "Retour", :back, class: "w-25 btn btn-flat p mt-3"  %>
</div>
