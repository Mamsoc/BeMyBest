<%- if controller_name != 'sessions' %>
  <br><%= link_to "Connexion", new_session_path(resource_name), class: "w-50 btn btn-flat" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <br><%= link_to "S'inscrire", new_registration_path(resource_name),  class: " mx-2 w-50 h5" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <br><%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: " mx-2 w-50 h5" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <br><%= link_to "Vous n'avez pas reçu les instructions de confirmation ?", new_confirmation_path(resource_name), class: " mx-2 w-50 btn btn-flat" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <br><%= link_to "Vous n'avez pas reçu les instructions de confirmation ?", new_unlock_path(resource_name), class: " mx-2 w-50 btn btn-flat" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
   <br> <%= link_to "Connectez-vous avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: "w-25 btn btn-flat" %><br />
  <% end %>
<% end %>
