<div class="container ">
  <h1 class= "h1 mt-3"> Scenarios </h1>
  <div class="cards">
    <%= form_with url: project_path(@project), method: :patch, html: { turbo: false} do |form|%>
    <input type="hidden" name="_method" value="patch">
    <% @scenarios.each do |scenario| %>
      <label>
        <div class="scenario-card">
          <input type="radio" name= "project[scenario_id]" value= "<%= scenario.id%>">
            <%= image_tag scenario.img,  class:"img-scenario-card", style:"background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))"%>
            <p class="scenario-title"> <%= scenario.title%> </p>
        </div>
        </label>
        <% end  %>
    <button type="submit" class="btn btn-flat p"> Valider </button>
    <% end %>

  </div>
</div>
