<div class="container ">
  <h1 class= "h1 mx-4 mt-3"> Scenarios </h1>
  <div class="cards">
    <%= form_with url: project_path(@project), method: :patch, html: { turbo: false} do |form|%>
    <input type="hidden" name="_method" value="patch">
    <% @scenarios.each do |scenario| %>
      <label>
      <div class="scenario-card" style="background-image: url('<%= asset_path scenario.img%>')">
      <input type="radio" name= "project[scenario_id]" value="<%= scenario.id%>" class="input-size">
          <p class="scenario-title"> <%= scenario.title%> </p>
      </div>
      </label>
      <% end  %>
    <button type="submit" class="btn btn-flat p w-100"> Valider </button>
    <% end %>

  </div>
</div>
