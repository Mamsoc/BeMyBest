<style>
  i, a{
 text-decoration:  none;
 color:#2c3a89;
}
</style>

<div class="grey-banner">
  <div class="image_button">
    <div>
      <p class="p bg-white"> <%= cl_image_tag @project.photo.key, class: "w-100 photo-project-id" %> </p>
    </div>
    <div class="card-project-relative margin-show-project">
      <div class="text">
        <h1 class="h1 bg-white" > <%=  @project.title %> </h1>
      </div>
      <div>
        <p class="p bg-white" > <%=  @project.description %> </p>
      </div>
    </div>
    <div class = "d-flex justify-content-center">
    <%= link_to  new_project_memory_path(@project), class: " h2 add-photo-show" do %>
      <h1 class ="plus"> + </h1>
      <i class="fa-solid fa-camera-retro fa-3x bg-white mx-2"></i>
     <% end %>
     </div>
  </div>

  <div class="container mt-2">
    <div class="accordion" id="accordionExample">
    <div class="accordion-item mx-2">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button collapsed h3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
          Récolte les souvenirs
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body p">
          <strong>Invite du monde</strong> pour récolter le plus de souvenirs !
          <div class="icon-link-project">
            <a href="https://wa.me/?text=click%20sur%20ce%20lien%20pour%20participer%20http://www.bmybest.me//projects/<%= @project.id %>/memories/new"><i class="fa-brands fa-whatsapp fa-sm"></i></a>
            <a href="mailto:?subject=Participes au cadeau BMyBest&body=click%20sur%20ce%20lien%20pour%20participer%20http://www.bmybest.me//projects/<%= @project.id %>/memories/new"><i class="fa-solid fa-envelope fa-sm"></i></a>
          </div>
        </div>
      </div>
    </div>
    <div class="accordion-item mx-2">
      <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed h3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Le jeu est prêt ? Envoie-lui le lien !
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
        <div class="accordion-body p">
          <strong>Tout est prêt ?</strong>
            Alors c'est le moment d'envoyer son cadeau à <%= @project.besty_first_name %>
          <div class="icon-link-project">
            <a href="https://wa.me/?text=click%20sur%20ce%20lien%20pour%20participer%20http://www.bmybest.me//projects/<%= @project.id %>/games"><i class="fa-brands fa-whatsapp fa-sm"></i></a>
            <a href="mailto:?subject=Participes au cadeau BMyBest&body=click%20sur%20ce%20lien%20pour%20participer%20http://www.bmybest.me//projects/<%= @project.id %>/games"><i class="fa-solid fa-envelope fa-sm"></i></a>
          </div>
        </div>
      </div>
    </div>
    <div>
      <%= link_to "Personnaliser le jeu ", edit_project_path(@project), class: "btn btn-flat w-100 mt-5 "%> </p>
    </div>
  </div>
</div>

<%= render "shared/navbar_dark" %>
