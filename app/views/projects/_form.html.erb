<div class="container">

<p> <br></p>

  <%= simple_form_for(project) do |f| %>
    <%= f.input :title, label: "Titre du projet",  input_html: { class: 'input-field' } %>
    <p> <br></p>
    <%= f.input :description, label: "Description du projet", input_html: { class: 'input-field' }  %>
    <p> <br></p>
    <%= f.input :photo, as: :file, input_html: { class: 'fileinput-button ' } %>
    <p> <br></p>
    <%= f.submit class: "btn btn-flat" %>
  <% end %>
</div>
