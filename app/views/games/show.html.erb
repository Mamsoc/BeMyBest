<div class="container">

  <h1> Jouons !</h1>
<div class="cards">
  <div class="card-category">
    <p><%= @card.title  %> </p>
    <p> <%= @card.question %></p>
    <%= cl_image_tag @memory.photo.key, class: "img-card d-block w-100"%>
    </div>
</div>

  <div data-controller="hiddenbutton" data-hiddenbutton-response-value="<%=@memory.response%>">

    <input type="text" data-hiddenbutton-target="input" data-action="keyup->hiddenbutton#responseTrue" class="w-100">
    <p> <br></p>
    <% if @next_card == nil %>
      <%=  link_to "finish",   project_win_path(@project), "data-hiddenbutton-target": "button", class: "btn-game w-100"%>
    <% else %>
      <%=  link_to "Next question",  project_game_path(@project, @next_card), "data-hiddenbutton-target": "button", class: "btn-game w-100"%>
    <% end %>

  </div>

</div>
