        <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
        <i class="fa-solid fa-arrow-right-from-bracket"></i>
        <% end %>
      <% end %>
      <a href="/users/edit"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
  </div>
