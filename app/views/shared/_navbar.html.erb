          <%= image_tag(current_user.photo, class: "user-photo") %>
        <% else %>
          <%= File.open(Rails.root.join("app/assets/images/default_user.jpg")) %>
      <% end %>
    <% else %>
      <a href="#"><i class="fa-regular fa-user"></i></a>
    <% end %>

      <a href="#"><i class="fa-regular fa-star"></i></a>
      <a href="/projects"><i class="fa-regular fa-comment"></i></a>
